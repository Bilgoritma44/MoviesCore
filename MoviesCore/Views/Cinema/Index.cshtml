@using EntityLayer.Concrete
@model List<Cinema>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <tr>
                <th>Cinema Logo</th>
                <th>Cinema Name</th>
                <th>Cinema Description</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@x.CinemaLogo" alt="@x.CinemaName" style="width:150px;height:150px" />
                    </td>
                    <td class="align-middle">
                        <a href="/Cinema/Detail/@x.CinemaId">@x.CinemaName</a>
                    </td>
                    <td class="align-middle">
                        @x.CinemaDescription.Substring(0, x.CinemaDescription.Substring(0, 20).LastIndexOf(" "))...
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" href="/Cinema/Update/@x.CinemaId"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-danger text-white" href="/Cinema/Delete/@x.CinemaId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
        </table>
        <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
            <a href="/Cinema/Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>
</div>
