@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <form class="form-group" method="post">

            <label><b>Category Name</b></label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            <br />
            <label><b>Category Description</b></label>
            @Html.TextAreaFor(x => x.CategoryDescription, 10, 3, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                <button class="btn btn-outline-success float-right">Save</button>
                <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
            </div>

        </form>
    </div>
</div>



