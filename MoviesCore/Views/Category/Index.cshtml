@using EntityLayer.Concrete
@model List<Category> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <tr>
              
                <th>Category Name</th>
                <th>Category Descripton</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                   
                    <td class="align-middle">
                       @x.CategoryName
                    </td>
                    <td class="align-middle">
                        @x.CategoryDescription
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" href="/Category/Update/@x.CategoryId"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-danger text-white" href="/Category/Delete/@x.CategoryId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
        </table>
        <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
            <a href="/Category/Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>
</div>

