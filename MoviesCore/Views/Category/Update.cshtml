@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        @using (Html.BeginForm("Update", "Category", FormMethod.Post))
        {

            @Html.HiddenFor(x => x.CategoryId, new { @class = "form-control" })
            <br />
            <label><b>Category Name</b></label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            <br />
            <label><b>Category Description</b></label>
            @Html.TextAreaFor(x => x.CategoryDescription, 10, 3, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                <button class="btn btn-outline-warning float-right">Update</button>
                <a asp-action="Index" class="btn btn-outline-info">Cancel</a>
            </div>

        }
    </div>
</div>


