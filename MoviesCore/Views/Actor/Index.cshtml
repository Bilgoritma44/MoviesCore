@using EntityLayer.Concrete
@model List<Actor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <tr>
                <th>Actor Photo</th>
                <th>Actor Name</th>
                <th>Actor Bio</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@x.ActorPhoto" alt="@x.ActorName" style="width:150px;height:150px" />
                    </td>
                    <td class="align-middle">
                        <a href="/Actor/Detail/@x.ActorId">@x.ActorName</a>
                    </td>
                    <td class="align-middle">
                        @x.ActorBio.Substring(0, x.ActorBio.Substring(0, 20).LastIndexOf(" "))...
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" href="/Actor/Update/@x.ActorId"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-danger text-white" href="/Actor/Delete/@x.ActorId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
        </table>
        <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
            <a href="/Actor/Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>
</div>

