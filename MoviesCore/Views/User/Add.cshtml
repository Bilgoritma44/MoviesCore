@model EntityLayer.Concrete.ApplicationUser
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <form class="form-group" method="post">
            <label><b>First Name</b></label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
            <br /><label><b>Last Name</b></label>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
            <br /><label><b>User Name</b></label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
            <br /><label><b>E-mail</b></label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            <br /><label><b>Password</b></label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            <br /><label><b>Confirm Password</b></label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            <br /><label><b>User Role</b></label>
            @Html.TextBoxFor(x => x.UserRole, new { @class = "form-control" })

            <br />
            <div class="form-group">
                <button class="btn btn-outline-success float-right">Create</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
            </div>
        </form>
    </div>
</div>
