@using EntityLayer.Concrete
@model List<Producer> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <tr>
                <th>Producer Photo</th>
                <th>Producer Name</th>
                <th>Producer Bio</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@x.ProducerPhoto" alt="@x.ProducerName" style="width:150px;height:150px" />
                    </td>
                    <td class="align-middle">
                        <a href="/Producer/Detail/@x.ProducerId">@x.ProducerName</a>
                    </td>
                    <td class="align-middle">
                        @x.ProducerBio.Substring(0, x.ProducerBio.Substring(0, 20).LastIndexOf(" "))...
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" href="/Producer/Update/@x.ProducerId"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-danger text-white" href="/Producer/Delete/@x.ProducerId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
        </table>
        <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
            <a href="/Producer/Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>
</div>

